<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>


<div class="card mt-5 ml-5" style="width: 18rem;">
    <div class="card-header">
        Arlistak
    </div>
    <ul class="list-group list-group-flush">
        <% arlistak.forEach(function(arlista){ %>
        <li class="list-group-item">
            <a href="/arlistak/<%=arlista.url%>"><%= arlista.title %></a>
            <form id="<%=arlista.url%>del" action="/arlistak/<%=arlista.url%>?_method=DELETE" method="POST">
                <span class="float-right" onclick="document.getElementById('<%=arlista.url%>del').submit()">
                        <i class="far fa-trash-alt"></i>
                </span>
            </form>
        </li>
        <% }); %>
    </ul>
</div>

<div class="container mt-5">
    <h4>Uj arlista hozzaadasa</h5>
    <form action='/arlista' method='POST'>
        <div class='form-group row'>
            <label for='nev' class='col-sm-2 col-form-label'>URL</label>
            <div class='col-sm-10'>
                <input type='text' class='form-control' name='url' placeholder='url' id='url'>
            </div>
        </div>
        <div class='form-group row'>
            <label for='title' class='col-sm-2 col-form-label'>Alcim</label>
            <div class='col-sm-10'>
                <input type='text' class='form-control' name='title' placeholder='alcim' id='title'>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</div>
<%- include('partials/footer'); -%>