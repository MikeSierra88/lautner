<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>

<div class="container">
    <div class="card mt-5 ml-5">
        <div class="card-header">
            Arlistak
        </div>
        <ul class="list-group list-group-flush">
            <% arlistak.forEach(function(arlista){ %>
            <li class="list-group-item">
                <a href="/arlistak/<%=arlista.url%>"><%= arlista.title %></a>
                <% if (currentUser) {%>
                <span class="float-right">
                    <a class="deco-none" href="/arlistak/<%=arlista.url%>/edit" class='deco-none'><i class="fas fa-edit"></i></a>
                    <!-- Delete Termek Button -->
                    <span role="button" class="btn-link deco-none float-right" 
                        data-toggle="modal" data-target="#deleteConfirmModal"
                        data-tipus="arlista"
                        data-arlistaurl="<%=arlista.url%>">
                        <i class="far fa-trash-alt"></i>
                    </span>
                </span>
                <% } %>
            </li>
            <% }); %>
        </ul>
    </div>
</div>

<% if (currentUser) {%>
<div class="container mt-5">
    <h4>Uj arlista hozzaadasa</h5>
    <form action='/arlistak' method='POST'>
        <div class='form-group row'>
            <label for='nev' class='col-sm-2 col-form-label'>URL</label>
            <div class='col-sm-10'>
                <input type='text' class='form-control' name='url' placeholder='url' id='url'>
            </div>
        </div>
        <div class='form-group row'>
            <label for='title' class='col-sm-2 col-form-label'>Alcim</label>
            <div class='col-sm-10'>
                <input type='text' class='form-control' name='title' placeholder='alcim' id='title'>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</div>

<!-- Modal delete confirm -->
<%- include('partials/deleteConfirm'); -%>

<script src="/javascript/arlistak.js" defer="defer" nonce="<%=nonce%>"></script>
<% } %>
<%- include('partials/footer'); -%>