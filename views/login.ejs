<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>
<!-- Google reCAPTCHAv3 integration-->
<script src="https://www.google.com/recaptcha/api.js?render=6LckzeUUAAAAANcKm00v94x1ocprnEd1BFiU6Azu" nonce="<%=nonce%>"></script>

<div class="container mt-5">
    <h4>Login form</h1>
    <form action="/login" method="POST">
        <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
        <input type="hidden" name="action" value="validate_captcha">
        <div class="form-group">
                <input type="text" name="username" placeholder="username" id="username">
                <input type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit" id="loginbtn">Login</button>
        </div>
    </form>
</div>

<script src="/javascript/login.js" defer="defer"></script>

<%- include('partials/footer'); -%>